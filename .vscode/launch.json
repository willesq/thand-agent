{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Agent",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}",
            "args": ["agent"],
            "env": {},
            "showLog": true
        },
        {
            "name": "Launch CLI sessions",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["sessions"],
            "env": {},
            "showLog": true
        },
        {
            "name": "Launch server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["server"],
            "env": {
                "THAND_SERVER_PORT": "9090",
                "THAND_LOGIN_ENDPOINT": "http://localhost:9090",
            },
            "showLog": true
        },
        {
            "name": "Run login (local)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["login", "--login-server", "http://localhost:9090"],
            "env": {},
            "showLog": true
        },
        {
            "name": "Run sessions (local)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["sessions", "--login-server", "http://localhost:9090"],
            "env": {},
            "showLog": true
        },
        {
            "name": "Run wizzard (remote)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "env": {},
            "envFile": "${workspaceFolder}/.env.remote.local",
            "showLog": true
        },
        {
            "name": "Run llm request",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["request", "Need access to AWS"],
            "env": {},
            "showLog": true
        },
        {
            "name": "AWS Elevation (local)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["request", "access", "--provider", "aws-thand-dev", "--role", "aws_admin", "--duration", "PT1M", "--reason", "Need access for demo", "--login-server", "http://localhost:9090"],
            "env": {},
            "showLog": true
        },
        {
            "name": "AWS Elevation (remote)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["request", "access", "--provider", "aws-thand-dev", "--role", "aws_admin", "--duration", "PT1M", "--reason", "Need access for demo"],
            "env": {},
            "envFile": "${workspaceFolder}/.env.remote.local",
            "showLog": true
        }
    ]
}
